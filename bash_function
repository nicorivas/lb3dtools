# This bash function can be called at the directory where the simulation
# data is to create symbolink links of the python libraries and run
# iPython
function mayavi(){
	D=$(pwd)
	if [ $# -ne 0 ] ; then
		cd $1
	fi
	ln -s ~/Code/analysis/lb3d/plot3d.py ./
	ln -s ~/Code/analysis/lb3d/plot2d.py ./
	#/apps/prod/HI-ERN/stow/anaconda2/bin/ipython --gui=wx --pylab=wx -i -c "%run mayavi_tools_particle.py"
	/apps/prod/HI-ERN/stow/anaconda2/bin/ipython --gui=wx --pylab=wx
	unlink plot3d.py
	unlink plot2d.py
	cd $D
}
